@model ForgotPassword
@{
    ViewData["Title"] = "ForgotPassword";
}


@section Link{
    <link href="~/css/registration/style.css" rel="stylesheet" />
}

<style>
    .register-section{
        padding: 82px 0;
    }
</style>

<!-- Register Start -->
<section class="register-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="register-form text-center">
                    <div class="register-logo">
                        <a href="/Home/Index">
                            <img src="~/image/ayan-logo.png" alt="">
                        </a>
                    </div>
                    <div class="register-title">
                        <h1>Forgot Password</h1>
                    </div>
                    <div class="register-form">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="input-field" placeholder="Email">
                                <br />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit">Send Email</button>
                        </form>
                    </div>
                </div>
                <div class="register-link">
                    <a href="/Auth/Login">I REMEMBER MY PASSWORD!</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register End -->

@section Script{
    <script src="~/js/registration/main.js"></script>
}