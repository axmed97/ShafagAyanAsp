@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

@section Link{
    <link href="~/css/registration/style.css" rel="stylesheet" />
}

<style>
    .register-section {
        padding: 80px 0;
    }
</style>

<!-- Register Start -->
<section class="register-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="register-form text-center">
                    <div class="register-logo">
                        <a href="/Home/Index">
                            <img src="~/image/ayan-logo.png" alt="">
                        </a>
                    </div>
                    <div class="register-title">
                        <h1>Reset Password</h1>
                    </div>
                    <div class="register-form">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Email" type="hidden" />
                            <input asp-for="Token" type="hidden" />
                            <div class="form-group">
                                <input asp-for="Passwrod" class="input-field" placeholder="Password" type="password" />
                                <br />
                                <span asp-validation-for="Passwrod" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="input-field" placeholder="Confirm Password" type="password" />
                                <br />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register End -->

@section Script{
    <script src="~/js/registration/main.js"></script>
}

