@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}

@section Link{ 
    <link href="~/css/registration/style.css" rel="stylesheet" />
}

<style>
    .register-section {
        padding: 82px 0;
    }
</style>

<!-- Register Start -->
<section class="register-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="register-form text-center">
                    <div class="register-logo">
                        <a href="/Home/Index">
                            <img src="~/image/ayan-logo.png" alt="">
                        </a>
                    </div>
                    <div class="register-title">
                        <h1>Change Password</h1>
                    </div>
                    <div class="register-form">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="CurrentPassword" class="input-field" placeholder="Current Password" type="password" />
                                <br />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="NewPassword" class="input-field" placeholder="New Password" type="password" />
                                <br />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="input-field" placeholder="Confirm Password" type="password" />
                                <br />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit">Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register End -->

@section Script{
    <script src="~/js/registration/main.js"></script>
}
