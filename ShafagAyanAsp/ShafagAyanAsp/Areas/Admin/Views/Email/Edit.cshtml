@model EmailInfo
@{
    ViewData["Title"] = "Edit";
    ViewData["activeTab"] = "Email";
}

@section Title{
    <h4 class="page-title text-uppercase font-medium font-20">Email</h4>
}

<dl class="text-center w-100">
    <dt class="page-title text-capitalize font-medium font-20 mb-3">Current Email</dt>
    <dd>
        @Model.Email
    </dd>
</dl>
<form method="post" class="w-100 text-center">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="w-100 form-check font-16 font-medium" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="w-100 form-check font-16 font-medium" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <input type="submit" value="Update" class="btn btn-outline-dark btn-block btn-lg" />
</form>

